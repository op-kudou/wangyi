swiper-item {
    width: 100%;
}

swiper-item image {
    width: 100%;
    /* height: 200rpx; */
}

.play-container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    margin-top: 10rpx;
    flex-direction: row;
}

.play-count {
    font-size: 24rpx;
    color: #fff;
    text-shadow: 1px 0 0 rgb(0, 0, 0, 0.7);
    position: absolute;
    right: 10rpx;
    top: 4rpx;
    padding-left: 26rpx;
    /* background-image: url(''); */
}

.play-name {
    font-size: 26rpx;
    line-height: 1.2;
    padding: 2px 0 0 6px;
    display: -webkit-box;
    box-orient: vertical;
    line-clamp: 2;
    text-overflow: ellipsis;
}
